<div class="{{ contactUsWhiteBox ? 'content' : 'recentworks' }}">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12" id="contact-form">
                <div class="contact-form">
                    {% if not contactUsHideTitle %}
                    <h3 class="title" id="contactanos">Solicitar presupuesto</h3>
                    {% endif %}
                    <p>Dejanos tu consulta y te responderemos a la brevedad.</p>
                    <form method="post" class="reply" id="contact">
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <!-- <label>Nombre: <span>*</span></label> -->
                                    <input class="form-control" id="name" name="name" type="text" value="" required placeholder="Nombre">
                                    <!-- <label>Email: <span>*</span></label> -->
                                    <input class="form-control" type="email" id="email" name="email" value="" required placeholder="Email">
                                    <!-- <label>Teléfono: <span>*</span></label> -->
                                    <input class="form-control" id="subject" name="phone" type="text" value="" required placeholder="Telefono">
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <!-- <label>Quiero solicitar un presupuesto para <span>*</span></label> -->
                                    <textarea class="form-control" id="text" name="message" rows="3" cols="40" required placeholder="Quiero solicitar un presupuesto para..."></textarea>
                                </div>
                            </div>
                        </fieldset>
                        <div class="actions">
                            <button
                                    class="btn-normal btn-color submit  bottom-pad"
                                    type="submit"
                                    style="margin-bottom:0;">
                                Solicitar Presupuesto Gratis
                            </button>
                        </div>
                        <div class="success alert-success alert" style="display:none">Tu mensaje se envió correctamente</div>
                        <div class="error alert-error alert" style="display:none">E-mail must be valid and message must be longer than 100 characters.</div>
                        <div class="clearfix">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
                <div class="address widget">
                    <h3 class="title">Datos de contacto</h3>
                    <ul class="contact-us">
                        {% if site.mainLocation.address is not empty %}
                        <li>
                            <i class="icon-map-marker"></i>
                            <p>
                                ${website.address}
                            </p>
                        </li>
                        {% endif %}
                        {% if site.phone is not empty %}
                        <li>
                            <i class="icon-phone"></i>
                            <p>
                                ${{ site.phone }}
                            </p>
                        </li>
                        {% endif %}
                        {% if site.email is not empty %}
                        <li>
                            <i class="icon-envelope"></i>
                            <p>
                                <a href="mailto:{{ site.email }}">{{ site.email }}</a>
                            </p>
                        </li>
                        {% endif %}
                    </ul>
                    <!-- <h3>Horarios de atención</h3> -->
                    <span>
                    <ul>
                        <li >
                            <i class="icon-time"></i>
                            {{ site.open_hours ? website.open_hours : 'Lunes a Viernes de 9 a 18 hs' }}
                        </li>
                    </ul>
                    </span>
                </div>
            </div>
        </div>
        {% if not hideLocationMap and site.mainLocation.address is not empty %}
        <div class="divider"></div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h3 class="title" id="ubicacion">Ubicación</h3>
                <div
                        id="maps"
                        class="google-maps"
                        data-company="{{ site.title }}"
                        data-address="{{ site.mainLocation.google_maps_address is not empty ? site.mainLocation.google_maps_address : site.mainLocation.address }}"
                        data-address-description="{{ site.mainLocation.address }}">
                </div>
                <!-- Left Section End -->
            </div>
        </div>
        {% endif %}
    </div>
    <!-- Our Clients End -->
</div>



<div class="modal fade" id="contactModal">
    <div class="modal-dialog" style="padding-top: 5%;">
        <div class="modal-content">
            <div class="modal-header">
                <button
                        type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-hidden="true"
                        onclick="javascript:$('#contactModal').modal('hide');">
                    &times;
                </button>
                <h4 class="modal-title">Solicitar Presupuesto</h4>
            </div>
            <div class="modal-body" style="background: #fafafa;">
                {% if site.phone is not empty %}
                <h2 class="title" id="messageTitle" style="text-align: center; margin-top: 0;">
                    <i class="icon-phone" style="margin-right: 8px;"></i>
                    Llamanos ahora al <a href="tel:{{ site.phone }}">{{ site.phone }}</a>!
                </h2>
                {% endif %}
                <h4 class="title" id="messageBody" style="margin-bottom: 18px; margin-left: 15px; margin-top: 25px;">
                    Dejanos tus datos y te contactaremos:
                </h4>

                <form method="post" class="reply" id="contact">
                    <fieldset>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control" id="name" name="name" type="text" value="" placeholder="Nombre" required>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control" type="tel" id="phone" name="phone" value="" placeholder="Teléfono" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <input class="form-control" id="email" name="email" type="email" value="" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <textarea class="form-control" id="text" name="message" style="min-height: 95px;" rows="3" cols="40" placeholder="Quiero solicitar un presupuesto para..." required></textarea>
                            </div>
                        </div>
                    </fieldset>
                    <div style="text-align: center;">
                        <button
                                class="btn-normal btn-color submit  bottom-pad"
                                id="btnSubmit"
                                type="submit"
                                style="margin-left: 3.5%; margin-bottom: 1%;">
                            Solicitar Presupuesto Gratis
                        </button>
                    </div>
                    <div class="success alert-success alert" style="display:none">
                        Tu mensaje se envió correctamente
                    </div>
                    <div class="error alert-error alert" style="display:none">
                        E-mail must be valid and message must be longer than 100 characters.
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

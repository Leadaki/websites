{% if 1 <= (site.videos | length) %}
<div class="content" id="video_gallery">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 com-sm-12 col-xs-12">
                <h3 class="title" data-name="products.title">Videos</h3>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12 portfolio-wrap">
                <div class="row">
                    <div class="portfolio">
                        {% for item in site.videos %}
                        {# TODO: {if video && video.contains('youtu') #}
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                            <div class="portfolio-item">
                                {# TODO: Get Youtube ID #}
                                <a href="{{ item }}" rel="prettyPhoto[pp_gal]"><img data-src="http://img.youtube.com/vi/${video.getYoutubeVideoId()}/hqdefault.jpg"/></a>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        {# /if #}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="divider"></div>
    </div>
</div>
{% endif %}

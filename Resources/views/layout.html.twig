{% block body %}
<!-- Wrap Start -->
<div class="wrap">
<!-- Header Start -->
<header id="header">
{% block header %}
    <!-- Main Header Start -->
    <div class="main-header">
        <div class="container">
            <!-- TopNav Start -->
            <div class="topnav navbar-header">
                <a class="navbar-toggle down-button" data-toggle="collapse" data-target=".slidedown">
                    <i class="icon-angle-down icon-current"></i>
                </a>
            </div>
            <!-- TopNav End -->
            <!-- Logo Start -->
            <div class="logo pull-left">
                <h1>
                    <a href="/" title="{{ site.title }}">
                    {% if site.logo is defined and site.logo is not empty %}
                        <img src="{{ site.logo.url }}" alt="{{ site.title }}">
                    {% else %}
                        {{ site.title }}
                    {% endif %}
                    </a>
                </h1>
            </div>
            <!-- Logo End -->
            <!-- Mobile Menu Start -->
            <div class="mobile navbar-header">
                <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" href="#">
                    <i class="icon-reorder icon-2x"></i>
                </a>
            </div>
            <!-- Mobile Menu End -->
            <!-- Menu Start -->
            <nav class="collapse navbar-collapse menu">
                <ul class="nav navbar-nav sf-menu">
                    {% if site.promotions is not empty %}
                    <li><a id="current" href="/promociones">Promociones</a></li>
                    {% endif %}
                    {% if site.products is not empty %}
                    <li><a href="/productos">Productos</a></li>
                    {% endif %}
                    {% if site.services is not empty %}
                    <li><a href="/servicios">Servicios</a></li>
                    {% endif %}
                    <li><a href="/quienes-somos">Qui&eacute;nes somos</a></li>
                    {% if site.main_location.address is not empty %}
                    <li><a href="/ubicacion">Ubicaci&oacute;n</a></li>
                    {% endif %}
                    <li><a href="/contactanos">Contactanos</a></li>
                </ul>
            </nav>
            <!-- Menu End -->
        </div>
    </div>
    <!-- Main Header End -->
{% endblock header %}
</header>
<!-- Header End -->

<!-- Content Start -->
<div id="main">
    {% block main %}{% endblock main %}

    <!-- Footer Start -->
    <footer id="footer">
    {% block footer %}
        <!-- Footer Top Start -->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <section class="col-lg-5 col-md-5 col-xs-12 col-sm-5 footer-one">
                        <h3>Sobre nosotros</h3>
                        <p>{{ site.main_description | raw('html') }}</p>
                    </section>

                    <section class="col-lg-3 col-md-3 col-xs-12 col-sm-3 footer-two">
                    {% if site.social.facebook is not empty
                        or site.social.twitter is not empty
                        or site.social.google_plus is not empty %}
                        <div class="follow widget">
                            <h3>Seguinos</h3>
                            <div class="member-social dark">
                                {% if site.social.facebook is not empty %}
                                <a class="facebook" href="{{ site.social.facebook }}"><i class="icon-facebook"></i></a>
                                {% endif %}
                                {% if site.social.twitter is not empty %}
                                <a class="twitter" href="{{ site.social.twitter }}"><i class="icon-twitter"></i></a>
                                {% endif %}
                                {% if site.social.google_plus is not empty %}
                                <a class="gplus" href="{{ site.social.google_plus }}"><i class="icon-google-plus"></i></a>
                                {% endif %}
                                {#<a class="dribbble" href="#"><i class="icon-dribbble"></i></a>#}
                                {#<a class="linkedin" href="#"><i class="icon-linkedin"></i></a>#}
                            </div>
                        </div>
                    {% endif %}
                    </section>

                    <section class="col-lg-4 col-md-4 col-xs-12 col-sm-4 footer-three">
                        <h3>Contactanos</h3>
                        <ul class="contact-us">
                            {% if site.main_location.address is defined and site.main_location.address is not empty %}
                            <li>
                                <i class="icon-map-marker"></i>
                                <p>
                                    {{ site.main_location.address }}
                                </p>
                            </li>
                            {% endif %}
                            {% if site.phone is defined and site.phone is not empty %}
                            <li>
                                <i class="icon-phone"></i>
                                <p>{{ site.phone }}</p>
                            </li>
                            {% endif %}
                            <li>
                                <i class="icon-envelope"></i>
                                <p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
                            </li>
                        </ul>
                    </section>
                </div>
            </div>
        </div>
        <!-- Footer Top End -->

        <!-- Footer Bottom Start -->
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 "> &copy; Copyright {{ 'now'|date('Y') }} powered by
                        <a href="http://leadaki.com">Leadaki. MÃ¡s clientes para tu negocio</a>. Todos los derechos reservados.</div>
                </div>
            </div>
        </div>
        <!-- Footer Bottom End -->
    {% endblock footer %}
    </footer>
</div>
<!-- Content End -->

<!-- Scroll To Top -->
<a href="#" class="scrollup"><i class="icon-angle-up"></i></a>
</div>
<!-- Wrap End -->
{% endblock body %}
